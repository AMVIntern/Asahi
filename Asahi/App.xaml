<Application x:Class="Asahi.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Asahi"
             xmlns:views="clr-namespace:Asahi.Views"
             xmlns:vm="clr-namespace:Asahi.ViewModels">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Styles/StyleDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type vm:HomeViewModel}">
                <views:HomeView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:ImageViewModel}">
                <views:ImageView />
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
