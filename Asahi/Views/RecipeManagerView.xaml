<UserControl x:Class="Asahi.Views.RecipeManagerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Asahi.Views"
             xmlns:uc="clr-namespace:Asahi.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="{DynamicResource PrimaryBackground}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel: Recipe List & Actions -->
        <uc:RecipeManagerControl Grid.RowSpan="5"
                  Grid.Column="0"
                  Width="250"/>
        <!-- Right Panel: Recipe Details & Editor -->
        <Border Grid.Column="1"
         Margin="5"
         BorderBrush="{StaticResource PrimaryBorder}"
         BorderThickness="1">

            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="0.25*"/>
                    <ColumnDefinition Width="0.25*"/>
                </Grid.ColumnDefinitions>

                <!-- Title -->
                <TextBlock Grid.Row="0"
                    Grid.ColumnSpan="3"
                    Margin="20"
                    Style="{StaticResource TextLarge}"
                    Text="Recipe Manager"
                    Foreground="{DynamicResource PrimaryForeground}"/>

                <!-- Divider Line -->
                <Line Grid.Row="1"
               Grid.ColumnSpan="3"
               Margin="30 0"
               Stroke="{StaticResource PrimaryBorder}"
               StrokeThickness="2"
               X1="0" X2="1"
               Stretch="Fill" 
               HorizontalAlignment="Stretch"/>

                <!-- Current Recipe Info -->
                <Border Grid.Row="2"
                 Grid.Column="0"
                 Grid.ColumnSpan="3"
                 Margin="20"
                 Padding="10"
                 BorderBrush="{StaticResource PrimaryBorder}"
                 BorderThickness="1"
                 CornerRadius="6"
                 Background="{DynamicResource PrimaryBackground}">

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="Current Recipe: "
                            Style="{StaticResource TextSmall}"
                            Foreground="{DynamicResource PrimaryForeground}"
                            Margin="0 0 5 0"/>
                        <TextBlock Text="{Binding CurrentRecipe}"
                            Style="{StaticResource TextSmall}"
                            FontWeight="SemiBold"
                            Foreground="{DynamicResource PrimaryForeground}"/>
                    </StackPanel>
                </Border>

                <!-- Table Headers -->
                <TextBlock Grid.Row="3"
                    Grid.Column="0"
                    Margin="10"
                    VerticalAlignment="Bottom"
                    Style="{StaticResource TextSmall}"
                    Text="Parameter"
                    Foreground="{DynamicResource PrimaryForeground}"/>

                <TextBlock Grid.Row="3"
                    Grid.Column="1"
                    Margin="10"
                    VerticalAlignment="Bottom"
                    Style="{StaticResource TextSmall}"
                    Text="Current Value"
                    Foreground="{DynamicResource PrimaryForeground}"/>

                <TextBlock Grid.Row="3"
                    Grid.Column="2"
                    Margin="10"
                    VerticalAlignment="Bottom"
                    Style="{StaticResource TextSmall}"
                    Text="New Value"
                    Foreground="{DynamicResource PrimaryForeground}"/>

                <!-- Parameter Editor -->
                <uc:RecipeParameterView Grid.Row="4"
                                 Grid.ColumnSpan="3"/>

                <Button Grid.Row="5"
                 Grid.ColumnSpan="3"
                 Command="{Binding SaveRecipeCommand}"
                 Style="{StaticResource PrimaryButton}"
                 IsEnabled="{Binding IsDefaultRecipeLoaded, Converter={StaticResource InverseBooleanConverter}}"
                 Content="Save Recipe"
                 MaxWidth="225"
                 Width="225"
                 Margin="0 20 0 0"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
