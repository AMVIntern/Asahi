<UserControl x:Class="Asahi.Views.ImageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:HalconDotNet="http://schemas.mvtec.com/halcondotnet"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Asahi.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0"
                Margin="10"
                Background="{DynamicResource PrimaryBackground}"
                BorderBrush="{StaticResource PrimaryBorder}"
                BorderThickness="1">
            <Grid>
                <!-- Cam1 Title Label -->
                <StackPanel Grid.Column="0"
                            Orientation="Horizontal"
                            Margin="5"
                            VerticalAlignment="Center">
                    <!-- LED Status Indicator -->
                    <Rectangle
                        Width="24"
                        Height="24"
                        Margin="0,0,6,0"
                        VerticalAlignment="Center"
                        Fill="{Binding Status, Converter={StaticResource StatusToColorConverter}}"
                        Stroke="Black"
                        StrokeThickness="1" 
                        Visibility="{Binding ShowStatusIndicator, Converter={StaticResource BoolToVisibilityConverter}}"/>

                    <!-- Camera Title -->
                    <TextBlock
                        VerticalAlignment="Center"
                        Style="{StaticResource TextVerySmall}"
                        Text="{Binding Title}" />
                </StackPanel>
            </Grid>
        </Border>
        <Grid Grid.Row="1">
            <Border Margin="5"
                    Background="#222"
                    CornerRadius="8">
                <HalconDotNet:HSmartWindowControlWPF
                MinWidth="400"
                MinHeight="250"
                Background="#222">
                    <HalconDotNet:HIconicDisplayObjectWPF IconicObject="{Binding Image}" />
                </HalconDotNet:HSmartWindowControlWPF>
            </Border>
        </Grid>
    </Grid>
</UserControl>
