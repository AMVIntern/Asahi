<UserControl x:Class="Asahi.Views.ImageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:HalconDotNet="http://schemas.mvtec.com/halcondotnet"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Asahi.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Camera title row -->
            <RowDefinition Height="*"/>
            <!-- Camera image -->
            <RowDefinition Height="Auto"/>
            <!-- Trigger button -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Margin="10"
                Background="{DynamicResource PrimaryBackground}"
                BorderBrush="{StaticResource PrimaryBorder}"
                BorderThickness="1">
            <StackPanel Orientation="Horizontal" Margin="5">
                <Rectangle Width="24" Height="24"
                           Fill="{Binding Status, Converter={StaticResource StatusToColorConverter}}"
                           Stroke="Black" StrokeThickness="1" />
                <TextBlock Text="{Binding Title}"
                           VerticalAlignment="Center"
                           Style="{StaticResource TextVerySmall}"/>
            </StackPanel>
        </Border>

        <!-- CAMERA IMAGE -->
        <Border Grid.Row="1"
                Margin="5"
                Background="#222"
                CornerRadius="8">
            <HalconDotNet:HSmartWindowControlWPF
                MinHeight="400"
                MinWidth="250"
                Background="#222">
                <HalconDotNet:HIconicDisplayObjectWPF IconicObject="{Binding Image}" />
            </HalconDotNet:HSmartWindowControlWPF>
        </Border>

        <!-- TRIGGER BUTTON BELOW CAMERA -->
        <Button Grid.Row="2"
                Content="Trigger"
                Command="{Binding DataContext.TriggerInspectionCommand,
                                  RelativeSource={RelativeSource AncestorType=Window}}"
                Style="{StaticResource NavigationPrimaryButton}"
                Height="150"
                FontSize="30"
                Margin="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                MinWidth="200"/>
    </Grid>
</UserControl>
