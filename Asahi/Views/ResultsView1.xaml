<UserControl x:Class="Asahi.Views.ResultsView1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Asahi.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Barcode Results" FontWeight="Bold" FontSize="16" Margin="5" Foreground="White"/>

        <!-- Barcode Display -->
        <Border Grid.Row="1" 
                BorderBrush="Gray" 
                BorderThickness="1" 
                CornerRadius="5" 
                Padding="10" 
                Margin="5"
                Background="#333">
            <StackPanel>
                <TextBlock FontSize="30"  Text="Detected Barcode:" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="White"/>
                <TextBlock Text="{Binding BarcodeDisplayText}" 
                           FontSize="30" 
                           FontWeight="Bold"
                           Foreground="LightGreen"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
    </Grid>

</UserControl>
