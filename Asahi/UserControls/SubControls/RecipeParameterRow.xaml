<UserControl x:Class="Asahi.UserControls.SubControls.RecipeParameterRow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Asahi.UserControls.SubControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="5"
  HorizontalAlignment="Stretch">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="0.25*" />
            <ColumnDefinition Width="0.25*" />
        </Grid.ColumnDefinitions>

        <!-- Parameter Name -->
        <TextBlock Grid.Column="0"
           Text="{Binding ParameterName, RelativeSource={RelativeSource AncestorType=UserControl}}"
           FontWeight="Bold"
           VerticalAlignment="Center"
           HorizontalAlignment="Center"
           Padding="5"
           ToolTip="{Binding ParameterName}"
           Style="{StaticResource TextVerySmall}"
           Foreground="{DynamicResource PrimaryForeground}" />

        <!-- Current Value -->
        <TextBlock Grid.Column="1"
           Text="{Binding CurrentValue, RelativeSource={RelativeSource AncestorType=UserControl}}"
           VerticalAlignment="Center"
           HorizontalAlignment="Center"
           Padding="5"
           TextWrapping="Wrap"
           Style="{StaticResource TextVerySmall}"
           Foreground="{DynamicResource PrimaryForeground}" />

        <!-- New Editable Value -->
        <TextBox Grid.Column="2"
         Text="{Binding NewValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource AncestorType=UserControl}}"
         Style="{StaticResource ValidatedTextBoxStyle}"
         VerticalAlignment="Center"
         TextAlignment="Center"
         Padding="5"
         MaxWidth="300"
         Background="{DynamicResource PrimaryBackground}"
         Foreground="{DynamicResource PrimaryForeground}"
         FocusVisualStyle="{x:Null}" />
    </Grid>
</UserControl>
