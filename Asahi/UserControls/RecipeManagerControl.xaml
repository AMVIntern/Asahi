<UserControl x:Class="Asahi.UserControls.RecipeManagerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Asahi.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <!-- Recipe Manager Control Container -->
    <Border Background="{DynamicResource PrimaryBackground}" Margin="5" BorderBrush="{StaticResource PrimaryBorder}" BorderThickness="1">

        <Grid Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <!-- Section Title -->
            <TextBlock Grid.Row="0"
           Style="{StaticResource TextSmall}"
           Text="Recipes:"
           Foreground="{DynamicResource PrimaryForeground}"/>

            <!-- Separator Line -->
            <Line Grid.Row="0"
          Grid.RowSpan="1"
          Margin="5 40 5 5"
          Stroke="{StaticResource PrimaryBorder}"
          StrokeThickness="2" 
          X1="0"
          X2="1"
          Stretch="Fill"
          HorizontalAlignment="Stretch"/>

            <!-- Recipe List -->
            <ListBox Grid.Row="1"
             Style="{StaticResource CustomListBox}"
             ItemContainerStyle="{StaticResource CustomListBoxItem}"
             HorizontalAlignment="Stretch"
             ItemsSource="{Binding RecipesCollection}"
             SelectedItem="{Binding TempRecipeSelected}"/>

            <!-- Load Button -->
            <Button Grid.Row="2"
            Command="{Binding LoadRecipeCommand}"
            Style="{StaticResource PrimaryButton}"
            Content="Load Recipe"/>

            <!-- Delete Button -->
            <Button Grid.Row="3"
            Command="{Binding DeleteRecipeCommand}"
            Style="{StaticResource PrimaryButton}"
            Content="Remove Recipe"/>

            <!-- Add Button -->
            <Button Grid.Row="4"
            Command="{Binding AddRecipeCommand}"
            Style="{StaticResource PrimaryButton}"
            Content="Add Recipe"/>
        </Grid>
    </Border>
</UserControl>
